<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/info_card_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385">

        <ImageView
            android:id="@+id/infoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="Music Info"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/caesar_dressing"
            android:text="About the App"
            android:textColor="#DED8D8"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/caesar_dressing"
            android:text="This app lets you mix different instrument sounds! Tap instruments to play and mix freely. ðŸŽ¶"
            android:textAlignment="center"
            android:textColor="#F4F0F0"
            android:textSize="16sp" />

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#7E610B"
            android:fontFamily="@font/caesar_dressing"
            android:text="Got it!"
            android:textColor="#F6F0F0"
            android:textColorLink="#DE3E3E" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>